---
import {Navigation} from "@/config/index.ts"
import IconPageLink from "./icons/Icon-PageLink.astro"
import ProjectList from "./ProjectList.astro"

const {projects} = Astro.props;
---


<section class="section layout-container | projectReel">
  <div class="stack -layout-xl">
  <h2 class="section-title typo-hollow -with-dot" data-aside><span>Projekte</span></h2>
    <ProjectList projects={projects.slice(0, 3)}></ProjectList>
    <div class="cluster extra-links">
      <a href={Navigation.projects.url} class="link-with-icon">
      <IconPageLink></IconPageLink><span>Alle Projekte</span></a>
      <a href="https://github.com/JSHSJ" target="_blank" rel="noopener noreferrer" class="link-with-icon"><IconPageLink></IconPageLink><span>GitHub</span></a>
    </div>
    </div>
</section>

