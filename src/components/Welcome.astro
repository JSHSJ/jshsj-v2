---
import Logo from "./Logo.astro"
import {MY_EMAIL} from "@/config/index.ts"
---
<style>

.welcomeContainer {
  width: 100%;
  height: 100%;
  align-items: center;
  padding-block: var(--size-relative-3xl);
}

.welcomeSidebar {
  align-items: center;
  width: 100%;
  height: max-content;
  --gap: var(--scale-3);
}

.logo {
   display: flex;
   justify-content: start;
   width: 100%;
   max-width: 24em;
}

.welcomeStack {
  --min-size: 48%;
  align-items: flex-start;
  align-self: flex-start;
}

dd {
    margin-inline: 0;
    margin-top: 0;
    font-size: var(--font-size-lg);
  }

 h1 {
    margin-inline: 0;
    margin-top: 0;
    font-size: var(--font-size-lg);
    --font-weight: initial;
  }
</style>

<section class="layout-container | welcomeContainer">
<div class="with-sidebar | welcomeSidebar full-width">
<div class="logo" data-aside>
            <Logo></Logo>
            </div>
            <dl class="stack -layout-s | welcomeStack" data-grow>
                <div>
                  <dt>
                  Hi! I'm
                  </dt>
                  <dd>
                  <h1>Joshua St√ºbner</h1>
                  </dd>
                </div>
                <div>
                  <dt>
                  and work as
                  </dt>
                  <dd>
                    Web Developer
                  </dd>
                </div>
                <div>
                  <dt>
                    at the moment at
                  </dt>
                  <dd>
                    quirion
                  </dd>
                </div>
                <div>
                  <dt>
                   You're always welcome to contact me at
                  </dt>
                  <dd>
                  <a href={`mailto:${MY_EMAIL}`}>{MY_EMAIL}</a>
                  </dd>
                </div>
            </dl>
        </div>
</section>
