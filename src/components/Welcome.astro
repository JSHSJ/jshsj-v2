---
import Logo from "./Logo.astro"
import {MY_EMAIL} from "@/config/index.ts"
---
<style lang="scss">

.welcomeContainer {
  width: 100%;
  height: 100%;
  align-items: center;
  padding-block: var(--size-3xl);
}

.welcomeSidebar {
  align-items: center;
  width: 100%;
  height: max-content;
  --gap: var(--s3);
}

.logo {
   display: flex;
   justify-content: start;
   width: 100%;
   max-width: 24em;
}

.welcomeStack {
  --min-size: 48%;
  align-items: flex-start;
  align-self: flex-start;

  dd {
    margin-inline: 0;
    margin-top: 0;
    font-size: var(--s1);
  }

  h1 {
    margin-inline: 0;
    margin-top: 0;
    font-size: var(--s1);
    --fontWeight: initial;
  }

}
</style>

<section class="layout-container | welcomeContainer">
<div class="with-sidebar | welcomeSidebar full-width">
<div class="logo" data-aside>
            <Logo></Logo>
            </div>
            <dl class="stack -layout-s | welcomeStack" data-grow>
                <div>
                  <dt>
                  Hi, ich bin
                  </dt>
                  <dd>
                  <h1>Joshua St√ºbner</h1>
                  </dd>
                </div>
                <div>
                  <dt>
                  und arbeite als
                  </dt>
                  <dd>
                  Web Entwickler
                  </dd>
                </div>
                <div>
                  <dt>
                  zur Zeit bei</dt>
                  <dd>
                  Quirion</dd>
                </div>
                <div>
                  <dt>Du kannst mir aber gerne eine Mail schreiben, an</dt>
                  <dd>
                  <a href={`mailto:${MY_EMAIL}`}>{MY_EMAIL}</a>
                  </dd>
                </div>
            </dl>
        </div>
</section>
