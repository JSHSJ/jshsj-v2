<style lang="scss">
#theme-toggle {
  height: auto;
  justify-content: space-between;
  display: flex;
  width: var(--s2);
  height: var(--s2);
  padding-inline: var(--s-4);
  padding-block: var(--s-4);
  border-width: 0;
  // box-shadow: 0 0 0 var(--s-5) var(--text2), var(--s-5) var(--s-5) 0 var(--s-5) var(--surface4);
}

[color-scheme="light"] {
  [data-light] {
    color: transparent;
  }
}
[color-scheme="dark"] {
  [data-dark] {
    color: transparent;
  }
}

</style>

<div class="">
  <button class="CTA-button -secondary" id="theme-toggle">
    <svg viewBox="0 0 119 118" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M78.04 106.795c-43.179-13.779-75.31-76.69-2.413-89.417 13.587-2.372-37.716 33.993 2.414 89.417z" stroke="currentColor" data-dark stroke-width="8" stroke-linecap="round" stroke-linejoin="round"/><path d="M19.5 50C16.167 47.167 8.4 41.9 4 43.5m32-22.23c-1.167-4.166-5.3-11.7-12.5-8.5m56.923 6.602c2.085-3.792 4.41-12.064-2.97-14.822M101.5 46.231c4.256.781 12.839.374 13.124-7.5m-47.86 59.461c-1.107 4.183-1.361 12.772 6.468 13.662M99.68 81c-.833 3.833.8 10.7 14 7.5M23.283 85c-6.527 2.535-17.712 8.951-10.24 14.332M94.5 57.5C94.5 76.554 78.606 92 59 92S23.5 76.554 23.5 57.5C23.5 38.446 39.394 23 59 23s35.5 15.446 35.5 34.5z" stroke="currentColor" data-light stroke-width="8" stroke-linecap="round" stroke-linejoin="round"/></svg>
  </button>

</div>

<script lang="ts">
const button = document.getElementById("theme-toggle");
button.addEventListener('click', () => {
  const currentTheme = document.body.getAttribute('color-scheme');
  if (currentTheme === "dark") {
    document.body.setAttribute('color-scheme', 'light');
    button.setAttribute('color-scheme', 'light');
  } else {
    document.body.setAttribute('color-scheme', 'dark');
    button.setAttribute('color-scheme', 'dark');
  }
})
</script>